  function update_counts() {
    $.getJSON('/home/counts', function(data) {
      for (var key in data) {
        if (data.hasOwnProperty(key)) {
          if(data[key] != null) {
            var id = '#' + key + '_d';
            cont = $(id).html();
            if(cont != data[key]) { 
              $(id).animate({ color: "#76EE00" }, 1000);
              $(id).html(data[key]);
              $(id).animate({ color: "#000000" }, 1000);
            }
          }
        }
      }
    });
  }
  /* used to have onlcick handler that would do this routine */
