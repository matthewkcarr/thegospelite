  function track_download(obj) {
      //var t_id = id.split('_');
      var t_id = $(obj).attr('id').split('_');
      $.getJSON('/home/downloaded/' + t_id[0], function(data) {
        id = '#' + t_id[0] + "_d"
        $(id).animate({color: '#76EE00'})
        $(id).html(data.downloads);
